{
  "manifest_version": 3,
  "name": "Y-Nav",
  "version": "1.0.4",
  "description": "Smart browser navigation: manage tabs, search bookmarks & history with intelligent ranking",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "storage",
    "favicon",
    "history"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Activate the extension"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/tidy-tab-16.png",
      "48": "assets/tidy-tab-48.png",
      "128": "assets/tidy-tab-128.png"
    }
  },
  "icons": {
    "16": "assets/tidy-tab-16.png",
    "48": "assets/tidy-tab-48.png",
    "128": "assets/tidy-tab-128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
