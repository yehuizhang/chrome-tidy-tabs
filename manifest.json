{
  "manifest_version": 3,
  "name": "Tidy Tabs",
  "version": "1.0",
  "description": "A Chrome extension to sort your tabs, remove duplicates, and merge windows",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/tidy-tab-16.png",
      "48": "src/icons/tidy-tab-48.png",
      "128": "src/icons/tidy-tab-128.png"
    }
  },
  "icons": {
    "16": "src/icons/tidy-tab-16.png",
    "48": "src/icons/tidy-tab-48.png",
    "128": "src/icons/tidy-tab-128.png"
  }
} 