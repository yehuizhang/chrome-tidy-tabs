{
  "manifest_version": 3,
  "name": "Tidy Tabs",
  "version": "1.0.3",
  "description": "A Chrome extension to sort your tabs, remove duplicates, and merge windows",
  "permissions": ["tabs", "activeTab", "bookmarks", "storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Activate the extension"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/tidy-tab-16.png",
      "48": "assets/tidy-tab-48.png",
      "128": "assets/tidy-tab-128.png"
    }
  },
  "icons": {
    "16": "assets/tidy-tab-16.png",
    "48": "assets/tidy-tab-48.png",
    "128": "assets/tidy-tab-128.png"
  }
} 